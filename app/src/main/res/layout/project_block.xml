<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView android:layout_width="64dp" android:layout_height="64dp"
               android:layout_margin="8dp"
               android:src="@drawable/logo"
               android:id="@+id/project_image"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:layout_marginStart="80dp"
                  android:layout_marginTop="12dp"
    android:layout_marginEnd="84dp">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="Корпоративный проект"
                  android:textSize="18sp" android:textColor="@android:color/white"
                  android:id="@+id/project_title"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="24dp"
                      android:orientation="horizontal"
        android:id="@+id/project_icons"/>

    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center" android:layout_alignParentEnd="true"
                  android:layout_marginEnd="8dp" android:orientation="vertical"
                  android:layout_marginTop="12dp" android:padding="8dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="02.05.2019" android:textColor="@android:color/white"
                  android:id="@+id/project_start"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="02.05.2029" android:textColor="@android:color/white"
                  android:id="@+id/project_end"/>

    </LinearLayout>

</RelativeLayout>